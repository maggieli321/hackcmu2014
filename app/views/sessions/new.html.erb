<div id = "login">
<div class="row">

  <div class="small-6 large-centered columns" id="main_content">
        
<p id = "newnom">Log In</p>

<%= form_tag sessions_path do %>

	<div class="control-group">
    <%= label_tag :username %>
    <div class="controls">
      <%= text_field_tag :username, params[:username] %>
    </div>
  </div>

	<div class="control-group">
    <%= label_tag :password %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>
   </div>
</div>
</div>